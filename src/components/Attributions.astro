---
import { attributions } from '../content/attributions.js';
---

<style>
    .attribution-section {
    padding: 4em 1em;
    text-align: center;
    }

    .attribution-title {
    font-size: 2.5rem;
    margin-bottom: 1em;
    color: var(--accent);
    font-weight: bold;
    }

    .attribution-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
    }

    .attribution-list li {
    margin-bottom: 1em;
    }

    .attribution-list a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.3s ease, text-decoration 0.3s ease;
    }

    .attribution-list a:hover {
    color: var(--accent-dark);
    text-decoration: underline;
    }
</style>
<section class="attribution-section">
    <h3 class="attribution-title">Attribution List</h3>
    <ul class="attribution-list">
        {attributions.map((item) => (
        <li>
            <a href={item.url} target="_blank" rel="noopener noreferrer">{item.name}</a>
        </li>
        ))}
    </ul>
</section>
